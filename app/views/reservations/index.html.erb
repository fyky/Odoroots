<h1>仮予約イベント一覧</h1>
  <table>
    <tr>
      <th>開催日</th>
      <th>イベント名</th>
      <th>コメント</th>
      <th>予約日時</th>
      <th>承認ステータス</th>
    </tr>


    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.event.date.strftime( "%Y年%m月%d日" ) %></td>
        <td><%= link_to event_path(reservation.event) do %><%= reservation.event.name %><% end %></td>
        <td><%= reservation.comment %></td>
        <td><%= reservation.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
        <td><%= reservation.permission_i18n %></td>
      </tr>
    <% end %>
  </table>