<h1>タイムライン（新着順）</h1>
  <%#= render "events/index", events: @events, allevents: @allevents %>
  全<%= @allevents.count %>件
  <div class="event_container">
    <% @events.each do |event| %>
      <div class="event_index">
        <%= attachment_image_tag event, :image, :fill, 400, 300, fallback: "/assets/noimage_event_index.jpg", size:'400x300', class:"img-responsive" %>
          <div class="event_index_text">
            <span class="event_title"><%= link_to event_path(event.id) do %><%= event.name %><% end %></span><br>
            <button class="btn_tag"><%= event.genre.name %></button>
            <% if event.user != current_user %><small>Posted by <%= event.user.name %></small><% end %><br>
            <p><i class="fas fa-table"></i> <%= event.date.strftime( "%Y年%m月%d日" ) %> <i class="fas fa-map-marker"></i> <%= event.address %></p>
            <!--<button class="btn_tag"><%#= event.genre.name %></button>-->
          </div>
      </div>
    <% end %>
  </div>

    <%= paginate @events %>