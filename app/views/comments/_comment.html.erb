<h3>コメント</h3>
  <div class="text">
    <p>コメント件数：<%= event.comments.count %>件</p>
    <% event.comments.where(reply_id: nil).includes([:user]).reverse.each do |comment| %>
      <div class="comment">
        <div class="comment_image">
          <%= attachment_image_tag comment.user, :image, :fill, 50, 50, style: "border-radius:20px;", fallback: "/assets/noimage.png", size:'50x50' %><br>
        </div>
        <div class="comment_text">
          <!--span class="reply"><i class="fas fa-reply"></i> 返信する</span> -->

          <p>
            <%= link_to user_path(comment.user) do %>
            <%= comment.user.name %>
            <% end %>
            <small style="color:#a9a9a9;"><%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></small></p>
          <p><%= comment.comment %></p>


          <details>
            <summary class="reply"><i class="fas fa-reply"></i> 返信する</summary>
            <div class="answer">
              <% event.comments.where(reply_id: comment.id).includes([:user]).reverse.each do |reply| %>
              <div class="reply_comment">
                <div class="comment_image">
                  <%= attachment_image_tag reply.user, :image, :fill, 50, 50, style: "border-radius:20px;", fallback: "/assets/noimage.png", size:'50x50' %><br>
                </div>
                <div class="comment_text">
                  <p><%= link_to user_path(reply.user) do %><%= reply.user.name %><% end %>
                  <small style="color:#a9a9a9;"><%= reply.created_at.strftime('%Y/%m/%d %H:%M:%S') %></small>
                  </p>
                  <%= reply.comment %>
                </div>
              </div>
              <% end %>
              <hr>
              <h5>返信コメントを投稿する</h5>
              <%= form_with(model:[@event, @comment]) do |f| %>
                  <%= f.text_area :comment, class: "comment_form", class: "comment_form",placeholder: "コメントをここに" %>
                  <%= f.hidden_field :reply_id, :value => comment.id %>
                  <%= f.submit "送信する", class: "send" %>
              <% end %>
            </div>
          </details>


        </div>
      </div>
    <% end %>
  </div>

